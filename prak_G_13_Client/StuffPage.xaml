<Page x:Class="prak_G_13_Client.StuffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prak_G_13_Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StuffPage" Background="White">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Border VerticalAlignment="Center" BorderBrush="Aqua" BorderThickness="2">
                <StackPanel Orientation="Vertical">
                    <TextBlock>Ни в коем случае не вводить буквы!!</TextBlock>
                    <TextBox></TextBox>
                </StackPanel>
            </Border>
            <Border VerticalAlignment="Center" BorderBrush="Aqua" BorderThickness="2">
                <StackPanel Orientation="Vertical">
                    <TextBlock>Ни в коем случае не вводить 0!!</TextBlock>
                    <TextBox></TextBox>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
