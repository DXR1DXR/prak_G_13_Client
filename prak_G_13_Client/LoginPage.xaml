<Page x:Class="prak_G_13_Client.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prak_G_13_Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Background="White">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150">
            <TextBox x:Name="LoginTB"></TextBox>
            <PasswordBox x:Name="PasswordPB" Margin="0 10 0 0"></PasswordBox>
            <Button x:Name="EnterBT" Margin="0 10 0 0" Width="100" Click="EnterBT_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
