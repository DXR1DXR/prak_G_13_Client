<Page x:Class="prak_G_13_Client.TwoFactor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prak_G_13_Client"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="TwoFactor" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="200">
            <!--<StackPanel Orientation="Horizontal" x:Name="RegSP">
                <TextBlock>Привязка</TextBlock>
                <ToggleButton></ToggleButton>
                <TextBlock>Регистрация</TextBlock>
            </StackPanel>-->
            <TextBox x:Name="LoginTB" HorizontalContentAlignment="Center" MinWidth="100" md:HintAssist.Hint="Логин"></TextBox>
            <PasswordBox x:Name="PasswordPB" md:HintAssist.Hint="Пароль" HorizontalContentAlignment="Center" Password=""></PasswordBox>
            <TextBox x:Name="CodeTB" md:HintAssist.Hint="2FA" HorizontalContentAlignment="Center"></TextBox>
            <Button Name="EnterBT" Click="EnterBT_Click">Войти</Button>
        </StackPanel>
    </Grid>
